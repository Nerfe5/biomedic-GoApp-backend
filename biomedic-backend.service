[Unit]
Description=Biomedic GoApp Backend
After=network.target

[Service]
Type=simple
User=nerfe5
WorkingDirectory=/home/nerfe5/projects/biomedic-GoApp-backend
ExecStart=/home/nerfe5/.nvm/versions/node/v22.20.0/bin/node /home/nerfe5/projects/biomedic-GoApp-backend/server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=biomedic-backend
Environment="PORT=3001"

[Install]
WantedBy=multi-user.target
